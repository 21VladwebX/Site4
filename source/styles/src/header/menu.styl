header
	img
		height: 480px;
menu 
	position: absolute;
	top: 449px;
	text-align: center;
	display: grid;
	grid-template-rows: 31px;
	grid-template-columns: repeat(6,160px);
	margin-left: 128px;
	margin-right: 104px;
	li
		display: block;
		background-color: #03a8d5;
		font-size: 13px;	
		padding-top: 5px;
		color: #fff;
		font-weight: bold;
		
		&:hover
			width: 140px;
			background-color: #03bae1;
			border-right: 20px solid #4ebfde;
			

.phone
	position: absolute;
	top:-250px;
	left: 800px;
	height: 55px;
	width: 211px;
	color: #fff;
	text-align: left;

	
	
	span
		display: block;
		
	span:nth-child(2), span:last-child
		display: block;
		margin-top: 9px;
	
	span:nth-child(2)
		float: left;
	span:last-child
		margin-left: 50px;
		font-size: 31px;
		
		
		